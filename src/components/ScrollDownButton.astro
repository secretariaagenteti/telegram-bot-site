---
// Floating scroll down button component
---
<button id="scrollDownBtn" class="fixed bottom-6 right-6 z-50 w-14 h-14 flex items-center justify-center rounded-full bg-blue-600 text-white shadow-lg transition-opacity opacity-0 pointer-events-none" aria-label="Scroll Down">
  <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
  </svg>
</button>
<script>
  window.addEventListener('DOMContentLoaded', () => {
    const btn = document.getElementById('scrollDownBtn');
    function checkScroll() {
      if (!btn) return;
      const hasMore = document.documentElement.scrollHeight > window.innerHeight + window.scrollY + 10;
      if (hasMore) {
        btn.style.opacity = '1';
        btn.style.pointerEvents = 'auto';
      } else {
        btn.style.opacity = '0';
        btn.style.pointerEvents = 'none';
      }
    }
    checkScroll();
    window.addEventListener('scroll', checkScroll);
    window.addEventListener('resize', checkScroll);
    if (btn) {
      btn.addEventListener('click', () => {
        window.scrollBy({ top: window.innerHeight * 0.8, behavior: 'smooth' });
      });
    }
  });
</script>
